{
  "name": "beastcss-webpack-plugin",
  "version": "1.0.3",
  "description": "Webpack plugin to inline critical CSS and async load the rest.",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.esm.js",
    "default": "./dist/index.esm.js"
  },
  "type": "module",
  "files": [
    "src",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "author": "Freddy Escobar <freddyescobar@hotmail.fr>",
  "keywords": [
    "critical css",
    "inline css",
    "critical",
    "beastcss",
    "webpack plugin",
    "performance",
    "fast"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/freddy38510/beastcss",
    "directory": "packages/beastcss-webpack-plugin"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "build": "yarn run rollup -c",
    "dev": "yarn run rollup -c -w",
    "prepack": "yarn -s build",
    "release": "HUSKY=0 yarn run standard-version --lerna-package beastcss-webpack-plugin"
  },
  "dependencies": {
    "beastcss": "1.0.4",
    "micromatch": "^4.0.4",
    "schema-utils": "^3.1.1",
    "webpack-sources": "^3.2.0"
  },
  "devDependencies": {
    "enhanced-resolve": "^5.8.3",
    "file-loader": "^6.0.0",
    "jsdom": "^18.0.0",
    "nano-memoize": "^1.2.1"
  },
  "peerDependencies": {
    "html-webpack-plugin": "^4.0.0 || ^5.0.0",
    "webpack": "^4.40.0 || ^5.21.0"
  },
  "peerDependenciesMeta": {
    "html-webpack-plugin": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
