{
  "name": "beastcss",
  "version": "1.0.4",
  "description": "Inline critical CSS and async load the rest.",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.esm.js",
    "default": "./dist/index.esm.js"
  },
  "type": "module",
  "files": [
    "src",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "author": "Freddy Escobar <freddyescobar@hotmail.fr>",
  "keywords": [
    "critical css",
    "inline css",
    "critical",
    "beastcss",
    "performance",
    "fast"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/freddy38510/beastcss",
    "directory": "packages/beastcss"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "build": "yarn run rollup -c",
    "dev": "yarn run rollup -c -w",
    "prepack": "yarn -s build",
    "release": "HUSKY=0 yarn run standard-version --lerna-package beastcss"
  },
  "dependencies": {
    "@freddy38510/dropcss": "^2.3.1",
    "chalk": "^4.1.2",
    "fast-glob": "^3.2.7",
    "node-html-parser": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
