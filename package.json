{
  "private": true,
  "license": "MIT",
  "author": "Freddy Escobar <freddyescobar@hotmail.fr>",
  "workspaces": {
    "packages": [
      "./packages/*"
    ],
    "nohoist": [
      "**/css-loader",
      "**/enhanced-resolve",
      "**/file-loader",
      "**/html-webpack-plugin",
      "**/mini-css-extract-plugin",
      "**/nano-memoize",
      "**/webpack"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "scripts": {
    "build": "lerna run --stream build",
    "build:main": "lerna run --stream --scope beastcss  build",
    "build:webpack": "lerna run --stream --scope beastcss-webpack-plugin build",
    "dev": "lerna run --stream --parallel dev",
    "dev:main": "lerna run --stream --scope beastcss dev",
    "dev:webpack": "lerna run --stream --scope beastcss-webpack-plugin dev",
    "release:main": "lerna run --stream --scope beastcss release",
    "release:webpack": "lerna run --stream --scope beastcss-webpack-plugin release",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "postinstall": "yarn run bootstrap",
    "prepare": "husky install",
    "install-test-webpack-versions": "./bin/install-test-webpack-versions.sh",
    "pretest": "yarn run install-test-webpack-versions",
    "test": "jest",
    "test:inspect": "NODE_OPTIONS='--inspect' yarn run test --runInBand"
  },
  "devDependencies": {
    "@babel/core": "7.16.12",
    "@babel/preset-env": "7.16.11",
    "@commitlint/cli": "16.1.0",
    "@commitlint/config-conventional": "16.0.0",
    "@commitlint/config-lerna-scopes": "16.0.0",
    "@types/node": "16.11.22",
    "@types/webpack": "5.28.0",
    "@types/webpack-sources": "3.2.0",
    "babel-jest": "27.4.6",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.8.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "26.0.0",
    "eslint-plugin-jsdoc": "37.7.0",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "lerna": "4.0.0",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "rollup": "2.67.0",
    "rollup-plugin-copy": "3.4.0",
    "standard-version": "9.3.2"
  }
}
