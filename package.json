{
  "private": true,
  "license": "MIT",
  "author": "Freddy Escobar <freddyescobar@hotmail.fr>",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "workspaces": {
    "packages": [
      "./packages/*"
    ]
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "build": "pnpm -r --filter=./packages/* run build",
    "dev": "pnpm -r --stream --filter=./packages/* run dev",
    "test": "jest",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache ."
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@types/node": "16.11.49",
    "@types/webpack": "5.28.0",
    "@types/webpack-sources": "3.2.0",
    "commitizen": "4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "es-jest": "2.0.0",
    "eslint": "8.22.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-workspaces": "1.2.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.8.3",
    "eslint-plugin-jsdoc": "39.3.6",
    "jest": "28.1.3",
    "lint-staged": "13.0.3",
    "pnpm": "7.9.3",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "rollup": "2.78.0",
    "rollup-plugin-copy": "3.4.0",
    "simple-git-hooks": "2.8.0",
    "typescript": "4.7.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged --concurrent false",
    "prepare-commit-msg": "cat $1 | npx commitlint -q || (exec < /dev/tty && node_modules/.bin/cz --hook || true)",
    "commit-msg": "npx --no -- commitlint --edit $1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/*/src/**/*.js": [
      "eslint --cache --fix"
    ]
  },
  "packageManager": "pnpm@7.9.3",
  "pnpm": {
    "overrides": {
      "beastcss": "workspace:*",
      "beastcss-webpack-plugin": "workspace:*",
      "glob-parent": "^6.0.2"
    }
  }
}
